{
  "name": "kuka-krl-assistant",
  "displayName": "KUKA KRL Assistant",
  "description": "Language features for KUKA KRL",
  "version": "1.4.4",
  "publisher": "Alfred",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vyken14/KUKA-KRL-Assistant"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "krl",
        "aliases": [
          "KUKA KRL",
          "krl"
        ],
        "extensions": [
          ".src",
          ".dat",
          ".sub"
        ],
        "configuration": "./client/krl-language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "krl",
        "path": "./client/snippets/krl.code-snippets"
      }
    ],
    "grammars": [
      {
        "language": "krl",
        "scopeName": "source.krl",
        "path": "./client/syntaxes/krl.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "KUKA KRL Assistant Settings",
      "properties": {
        "kuka-krl-assistant.defdatValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable DEFDAT validation"
        }
      }
    },
    "commands": [
      {
        "command": "kuka-krl-assistant.toggleDefdatValidation",
        "title": "KRL assistant : Toggle DEFDAT Validation"
      },
      {
        "command": "kuka-krl-assistant.showStatus",
        "title": "KRL assistant : Show Status"
      }
    ]
  },
  "scripts": {
    "merge-commands": "node mergeCommands.js",
    "compile": "tsc -b client server && npm run merge-commands"
  },
  "devDependencies": {
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0"
  }
}